
if @zone
  page.visual_effect :highlight, 'zone-set', :duration => 2, :startcolor => "#99ff99"
  page.call "$('service_subscription_formatted_zone').setValue", @zone
  page.call "$('service_subscription_formatted_zone_readonly').update", @zone
  page.hide 'service_subscription_formatted_zone_error'
else
  page.visual_effect :highlight, 'zone-set', :duration => 2, :startcolor => "#ff9999"
  page.call "$('service_subscription_formatted_zone').setValue", "--"
  page.call "$('service_subscription_formatted_zone_readonly').update", "--"
  page.call "$('service_subscription_formatted_zone_error').update", "We couldn't find your zone.  Check address, or set manually."
  page.show 'service_subscription_formatted_zone_error'
end