<h1>Send a text message!</h1>

<% form_for @sms_message, :url => sms_message_path do |f|-%>
	<%= f.error_messages %>
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Send", :class => "sexybutton sexysimple" %>
  </div>
<% end %>